#include <stdlib.h>
#include <stdio.h>
#include <time.h>
#define SIZE 15

void search_min();
void search_max();
void init_output();
int array[SIZE];
int max = INT_MIN, min = INT_MAX;

int main() {
init_output(); 
search_max(); 
search_min(); 
printf("Max( %d ) + min( %d ) = %d\n", max, min, max + min);
printf("Max( %d ) - min( %d ) = %d\n", max, min, max - min);
return 0;
}

void init_output() {
srand (time (NULL));
for (int i = 0; i < SIZE; i++) {
array[i] = rand() % 201 - 100; 
printf("%d ", array[i]);
}
printf("\n");
}

void search_min() {
for (int i = 0; i < SIZE; i++) {
if (array[i] < min) {min = array[i];}
}
}

void search_max() {
for (int i = 0; i < SIZE; i++) {
if (array[i] > max) {max = array[i];}
}
}
